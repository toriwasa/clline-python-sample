{
    // 【エディタ全体の設定】
    // ファイル保存時に行末の空白を削除する
    "files.trimTrailingWhitespace": true,
    // デフォルト改行コードは LF 固定
    "files.eol": "\n",
    // 最終行以降に追記した場合に追加分だけが差分になるように末尾に改行を追加する
    "files.insertFinalNewline": true,
    // 差分表示の際に空白を無視する
    "diffEditor.ignoreTrimWhitespace": false,
    // 保存時に自動フォーマットを行う
    "editor.formatOnSave": true,
    // ファイル保存時の挙動を設定
    "editor.codeActionsOnSave": {
        // 自動フォーマット時にコードの修正を行う
        "source.fixAll": "explicit",
        // 自動フォーマット時にimportの整理を行う
        "source.organizeImports": "explicit"
    },
    // 相対パスコピー時にスラッシュ区切りでコピーする
    "explorer.copyRelativePathSeparator": "/",
    // 連続する空白文字を表示する
    "editor.renderWhitespace": "boundary",
    // 【開発機能の設定】
    // リモートリポジトリを自動で更新する
    "git.autofetch": true,
    // 【拡張機能設定】
    // Git Blame のメッセージを行末に表示する
    "gitblame.inlineMessageEnabled": true,
    // Git Blame のメッセージ形式設定
    "gitblame.inlineMessageFormat": "${author.name} (${time.ago}) ${commit.summary}",
    // TODOコメントの表示形式設定
    "todohighlight.defaultStyle": {
        "color": "#ffffff",
    },
    "todohighlight.keywords": [
        {
            "backgroundColor": "#daab10",
            "text": "TODO:"
        },
        {
            "backgroundColor": "#f4761c",
            "text": "WARNING:"
        },
        {
            "backgroundColor": "#f271cb",
            "text": "FIXME:"
        },
        {
            "backgroundColor": "#2459f5",
            "text": "NOTE:"
        }
    ],
    // 【Python固有の設定】
    "[Python]": {
        // 保存時の自動フォーマットを有効にする
        "editor.formatOnSave": true,
        // FormatterをRuffに設定
        "editor.defaultFormatter": "charliermarsh.ruff",
        // 保存時の挙動を設定
        "editor.codeActionsOnSave": {
            // 自動フォーマット時にコードの修正を行う
            "source.fixAll.ruff": "explicit",
            // 自動フォーマット時にimportの整理を行う
            "source.organizeImports.ruff": "explicit"
        }
    },
    // 開発時のPython実行バイナリはワークスペース外の仮想環境を指定する
    "python.defaultInterpreterPath": "/home/vscode/.venv/bin/python",
    // 変数および関数の返り値について推論した型ヒントを表示する
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    // pytestのテストケースパラメータの型ヒントを表示する
    "python.analysis.inlayHints.pytestParameters": true,
}
